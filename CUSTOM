    <script src="https://cdnjs.cloudflare.com/ajax/libs/fabric.js/5.3.0/fabric.min.js"></script>
    <script>
        const canvas = new fabric.Canvas('sticker-canvas');
        const products = document.querySelectorAll('.product-card');
        const customizeSection = document.getElementById('customize');
        const previewSection = document.getElementById('preview');
        const addTextBtn = document.getElementById('add-text');
        const addShapeBtn = document.getElementById('add-shape');
        const uploadImage = document.getElementById('upload-image');
        const colorPicker = document.getElementById('color-picker');
        const previewBtn = document.getElementById('preview-btn');
        const addToCartBtn = document.getElementById('add-to-cart');
        let selectedProduct = null;

        // Product selection
        products.forEach(card => {
            card.addEventListener('click', () => {
                selectedProduct = card.dataset.product;
                document.getElementById('products').classList.add('hidden');
                customizeSection.classList.remove('hidden');
                // Load product background (e.g., overlay image)
                fabric.Image.fromURL(`assets/${selectedProduct}.png`, img => {
                    img.scaleToWidth(500);
                    canvas.setBackgroundImage(img, canvas.renderAll.bind(canvas));
                });
            });
        });

        // Add text
        addTextBtn.addEventListener('click', () => {
            const text = new fabric.IText('Your Text Here', {
                left: 100,
                top: 100,
                fontFamily: 'Roboto',
                fill: colorPicker.value,
                fontSize: 24,
            });
            canvas.add(text);
        });

        // Add shape
        addShapeBtn.addEventListener('click', () => {
            const circle = new fabric.Circle({
                radius: 50,
                fill: colorPicker.value,
                left: 100,
                top: 100,
            });
            canvas.add(circle);
        });

        // Upload image
        uploadImage.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (f) => {
                    fabric.Image.fromURL(f.target.result, img => {
                        img.scaleToWidth(200);
                        canvas.add(img);
                    });
                };
                reader.readAsDataURL(file);
            }
        });

        // Color picker
        colorPicker.addEventListener('input', () => {
            const active = canvas.getActiveObject();
            if (active) {
                active.set('fill', colorPicker.value);
                canvas.renderAll();
            }
        });

        // Preview
        previewBtn.addEventListener('click', () => {
            const dataURL = canvas.toDataURL({ format: 'png', quality: 0.8 });
            document.getElementById('preview-container').innerHTML = `<img src="${dataURL}" alt="Sticker Preview" class="mx-auto border rounded shadow">`;
            customizeSection.classList.add('hidden');
            previewSection.classList.remove('hidden');
        });

        // Add to cart (simplified; integrate Stripe later)
        addToCartBtn.addEventListener('click', () => {
            alert('Added to cart! (Integrate payment here)');
            // Send to backend: e.g., fetch('/api/order', { method: 'POST', body: JSON.stringify({ product: selectedProduct, design: canvas.toJSON() }) });
        });
    </script>
