            <div class="preview" onclick="setSurface('other')">
                <img src="https://via.placeholder.com/150x200?text=Other" alt="Other Preview">
                <p>Other</p>
            </div>
        </div>
        <div class="designer">
            <div class="canvas-container">
                <h3>Your Sticker Design</h3>
                <canvas id="stickerCanvas" width="300" height="300"></canvas>
            </div>
            <div class="controls">
                <h3>Customize</h3>
                <input type="text" id="textInput" placeholder="Add text">
                <input type="color" id="colorInput" value="#3498DB">
                <select id="shapeSelect">
                    <option value="circle">Circle</option>
                    <option value="square">Square</option>
                    <option value="none">None</option>
                </select>
                <input type="file" id="imageInput" accept="image/*">
                <button onclick="addText()">Add Text</button>
                <button onclick="addShape()">Add Shape</button>
                <button onclick="addImage()">Add Image</button>
                <button onclick="clearCanvas()">Clear</button>
                <br>
                <label>Size: <select id="sizeSelect"><option>Small</option><option>Medium</option><option>Large</option></select></label>
                <label>Material: <select id="materialSelect"><option>Vinyl</option><option>Paper</option></select></label>
                <label>Quantity: <input type="number" id="quantityInput" value="1" min="1"></label>
                <label>Finish: <select id="finishSelect"><option>Glossy</option><option>Matte</option></select></label>
            </div>
        </div>
        <div class="checkout">
            <h3>Order Summary</h3>
            <p id="priceDisplay">Total: $5.00</p>
            <button onclick="checkout()">Proceed to Checkout</button>
        </div>
    </div>
    <script>
        const canvas = document.getElementById('stickerCanvas');
        const ctx = canvas.getContext('2d');
        let currentSurface = 'tshirt';

        function setSurface(surface) {
            currentSurface = surface;
            // In a real app, update canvas background or overlay
            alert(`Switched to ${surface} preview`);
        }

        function addText() {
            const text = document.getElementById('textInput').value;
            const color = document.getElementById('colorInput').value;
            ctx.fillStyle = color;
            ctx.font = '20px Roboto';
            ctx.fillText(text, 50, 150);
        }

        function addShape() {
            const shape = document.getElementById('shapeSelect').value;
            const color = document.getElementById('colorInput').value;
            ctx.fillStyle = color;
            if (shape === 'circle') {
                ctx.beginPath();
                ctx.arc(150, 150, 50, 0, 2 * Math.PI);
                ctx.fill();
            } else if (shape === 'square') {
                ctx.fillRect(100, 100, 100, 100);
            }
        }

        function addImage() {
            const file = document.getElementById('imageInput').files[0];
            if (file) {
                const img = new Image();
                img.onload = () => ctx.drawImage(img, 50, 50, 200, 200);
                img.src = URL.createObjectURL(file);
            }
        }

        function clearCanvas() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
        }

        function updatePrice() {
            const quantity = parseInt(document.getElementById('quantityInput').value) || 1;
            const basePrice = 5; // Example pricing
            const total = basePrice * quantity;
            document.getElementById('priceDisplay').textContent = `Total: $${total.toFixed(2)}`;
        }

        document.getElementById('quantityInput').addEventListener('input', updatePrice);
        updatePrice(); // Initial call

        function checkout() {
            alert('Checkout initiated! (Integrate with payment gateway)');
        }
    </script>
</body>
